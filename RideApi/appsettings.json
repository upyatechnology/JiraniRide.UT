{
  "ConnectionStrings": {
    "JiraniRideConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=JiraniRideAppDb;Trusted_Connection=True;",
    "JiraniRideIdentityConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=JiraniRideAppIdentityDb;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "jirani-ride-group",
    "EnableAutoCommit": "true",
    "AutoOffsetReset": "earliest"
  },
  "AllowedHosts": "*"
}
